<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/tabButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/budgetEditIncomeSwitchButton"
            style="@style/tabButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/income" />

        <Button
            android:id="@+id/budgetEditExpensesSwitchButton"
            style="@style/tabButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/expenses" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/budgetItemEditBar"
        style="@style/editButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/your_budget"
            android:textSize="18dp"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/budgetItemEditBarEditButton"
            style="@style/editButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:padding="0dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/edit" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/budgetItemEditDoneBar"
        style="@style/editButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone" >

        <Button
            android:id="@+id/budgetItemEditBarEditDoneButton"
            style="@style/editButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:padding="0dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/done" />
        
                <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/your_budget"
            android:textSize="18dp"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
                
        <LinearLayout
            android:id="@+id/budgetItemListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

</LinearLayout>